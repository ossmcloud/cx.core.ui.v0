{{#if readOnly}}
<span id="{{id}}" name="{{name}}" class="jx-inlineText">{{{value}}}</span>
{{else}}
<textarea
    id="{{id}}" name="{{name}}" class="jx-control jx-textarea" type="text" 
    rows="{{rows}}" cols="{{cols}}"
    {{#if fieldNameDb}} data-cx-field-name="{{fieldNameDb}}"{{/if}}
    {{#if inputStyle}} style="{{inputStyle}}"{{/if}}
    {{#if min}} minlength="{{min}}" {{/if}}
    {{#if max}} maxlength="{{max}}" {{/if}}
    {{#if placeHolder}}  placeholder="{{placeHolder}}" {{/if}}
    {{#if disabled}} disabled  {{/if}}
>{{value}}</textarea>
{{/if}}