{{#if readOnly}}
<span id="{{id}}" name="{{name}}" class="jx-inlineText">{{{value}}}</span>
{{else}}

<select
    id="{{id}}" name="{{name}}" class="jx-control" 
    {{#if fieldNameDb}} data-cx-field-name="{{fieldNameDb}}"{{/if}}
    {{#if inputStyle}} style="{{inputStyle}}"{{/if}}
    {{#if width}} {{/if}}
    {{#if disabled}} disabled  {{/if}}
>
    {{! add disabled item to work as place holder }}
    {{#if placeHolder}}
        <option value="" selected disabled>{{placeHolder}}</option>
    {{/if}}
    {{! if allow empty then add blank option }}
    {{#if allowEmpty}}
        <option value=""></option>
    {{/if}}
    {{! now add the options }}
    {{#each options as | option |}}
        <option value="{{option.value}}" data-object="{{option.object}}""
            {{! this is a custom helper}}
            {{#if_val option.value}}
                selected
            {{/if_val}}
        >{{{option.text}}}</option>
    {{/each}}
</select>
{{/if}}